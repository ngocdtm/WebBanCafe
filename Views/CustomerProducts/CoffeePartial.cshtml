@{
    ViewBag.Title = "CoffeePartial";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

@model IEnumerable<WebsiteBanCaPhe.Models.Product>
@{
    var price = @ViewBag.price;
}
<div class="row g-1">
    @foreach (var item in Model)
    {
        <div class="card col-sm-6 col-md-3 col-lg-3 border-0">

            <a href="@Url.Action("Details", "Products", new { id=item.ProductID })">
                <img src="~/Image/@item.ImagePro" />
            </a>
            <div class="card-body">
                <h5 class="card-title">@item.NamePro</h5>
                <p class="card-text">@price</p>
            </div>
            <a class="btn order" href="/Cart/AddtoCart/@item.ProductID">Đặt ngay</a>
        </div>
    }
</div>