@model WebsiteBanCaPhe.Models.Customer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">CHỈNH SỬA THÔNG TIN CÁ NHÂN</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />

            @Html.ValidationSummary(true, "", new
            {
                @class = "text- danger"
            })

            @Html.HiddenFor(model => model.IDCus)
           
            <div class="form-group">

                <div class="col-md-10">
                    TÊN KHÁCH HÀNG
                    @Html.EditorFor(model => model.DisplayName, new
                    {
                    htmlAttributes = new { @class = "form-control" }
                    })
                    @Html.ValidationMessageFor(model => model.DisplayName, "",
                    new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    GIỚI TÍNH
                    @Html.EditorFor(model => model.Gender, new
                    {
                    htmlAttributes = new { @class = "form-control" }
                    })
                    @Html.ValidationMessageFor(model => model.Gender, "",
                    new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    SỐ ĐIỆN THOẠI
                    @Html.EditorFor(model => model.PhoneCus, new
                    {
                    htmlAttributes = new { @class = "form-control" }
                    })
                    @Html.ValidationMessageFor(model => model.PhoneCus, "",
                    new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">

                <div class="col-md-10">
                    ĐỊA CHỈ
                    @Html.EditorFor(model => model.Address, new
                    {
                    htmlAttributes = new { @class = "form-control" }
                    })
                    @Html.ValidationMessageFor(model => model.Address, "",
                    new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mb-3 mt-3">

                    <input type="submit" value="LƯU" class="btn btn-primary" />

                </div>
            </div>
        </div>

    }
    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
    </div>
</div>