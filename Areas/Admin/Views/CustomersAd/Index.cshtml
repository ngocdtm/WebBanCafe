@model IEnumerable<WebsiteBanCaPhe.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">THÔNG TIN CUSTOMERS</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new
        {
            @class = "btn btn-primary"
        })
    </p>
    <table class="table">
        <tr>
            <th>
                TÊN 
            </th>
            <th>
                PHONE
            </th>

            <th>
                ADDRESS
            </th>

            <th>
               STATUS
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.IDCus }, new
                    {
                    @class = "btn btn-success"
                    }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.IDCus },
                    new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.IDCus }, new
                    {
                    @class = "btn btn-danger"
                    })
                </td>
            </tr>
        }
    </table>
</div>
