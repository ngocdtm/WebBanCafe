@model WebsiteBanCaPhe.Models.OrderPro

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">CHI TIẾT BILLS</h2>
    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Customer.NameCus)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Customer.NameCus)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Customer.PhoneCus)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Customer.PhoneCus)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.date)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.date)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TotalPrice)
            </dd>
        </dl>

    </div>

    <table class="table">
        <tr>
            <th>
                IDPro
            </th>
            <th>
                Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                UnitPr
            </th>
            <th>
                Total
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDProduct)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.NamePro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalMoney)
                </td>

            </tr>
        }
    </table>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
    </p>
</div>