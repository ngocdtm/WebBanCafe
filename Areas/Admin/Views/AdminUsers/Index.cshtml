@model IEnumerable < WebsiteBanCaPhe.Models.AdminUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div style="margin: 10px auto; width: 70%;">
    <h2 style="text-align: center">THÔNG TIN ADMIN</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new
        {
            @class = "btn btn-primary"
        })
    </p>
    <table class="table">
        <tr>
            <th>
                TÊN ADMIN
            </th>
            <th>
                PASSWORD
            </th>

            <th>
                ADDRESS
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PasswordUser)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, new
                    {
                    @class = "btn btn-success"
                    }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID},
                    new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, new
                    {
                    @class = "btn btn-danger"
                    })
                </td>
            </tr>
        }
    </table>
</div>

